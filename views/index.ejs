    <script type="text/javascript">
      var dataset={
        User:<%- JSON.stringify(user) %>,
        Timenews:<%- JSON.stringify(Timenews)%>,
        Hotnews:<%- JSON.stringify(Hotnews) %>,
        typelist:<%- JSON.stringify(typeList) %>
