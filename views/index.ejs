		<script src="js/jquery-3.1.1.min.js"></script>
		<script src="js/bootstrap.min.js"></script>
		<!-- Custom JavaScript -->
    <script src="js/main.js"></script>
    <script>
        $(document).ready(function() {
          user=dataset.User;
          hotnews=dataset.Hotnews;
          timenews=dataset.Timenews;
          //if have userinfo change view
          if(!user.null){
            $(".sign").hide();
            $(".logout").show();
            $(".userName").text("hello,"+user.name);
          }
          for(var e=0;e<4;e++){
            $('.tab-pane__category').eq(e).append(timenews[e].time.substring(0,10));
            $('.time').eq(e).append(timenews[e].time.substring(0,10));
          }
          /**
          HotNews
          */
          var HotNewsNum=0;
          function getType(typenum) {
            return dataset.typelist[typenum-1];
          }
          function addSmallBlock(row,news) {
            $('#'+row).append(`
              <div class="col-sm-3">
                  <div class="thumbnail thumbnail_small">
                      <a href="/news?name=${news.name}" class="thumbnail__link">
                          <div style="width:270px;height:151px;">
                          <img src="updata/images/${news.name}.jpeg" height="180" width="270" alt="News">
                          </div>
                      </a>
                      <div class="caption thumbnail__caption">
                          <div class="news caption__news">
                              <p class="news__category yellow-line">${getType(news.type)}</p>
                              <a href="/news?name=${news.name}" class="news__link">
                                  <p class="news__text">${news.name}</p>
                              </a>
                          </div>
                          <div class="posted">
                              <span class="posted__date">${news.time.substring(0,10)}</span>
                              <ul class="posted__icon">
                                  <li>
                                      <span>
                                      <i class="icon-eye"></i>${news.commentCount}
                                  </span>
                                  </li>
                              </ul>
                          </div>
                      </div>
                  </div>
              </div>`);
          }
          //add content
          $('#Hotnews').append("<div class='row' id='row1'></div>");
          $('#row1').append(`
            <div class="col-sm-6">
              <div class="thumbnail thumbnail_big">
                  <div >
                  <img src="updata/images/${hotnews[0].name}.jpeg" height="350" width="563" alt="News">
                  <div class="caption thumbnail__caption" style="height:256px;">
                      <div class="news caption__news" style="height:186px">
                          <p class="news__category yellow-line">${getType(hotnews[0].type)}</p>
                          <a href="/news?name=${hotnews[0].name}" class="news__head">${hotnews[0].name}</a>
                          <p class="news__desc">${hotnews[0].name}${hotnews[0].name}</p>
                      </div>
                      <div class="posted">
                          <span class="posted__date">${hotnews[0].time.substring(0,10)}</span>
                          <ul class="posted__icon">
                              <li>
                                  <span>
                                  <i class="icon-eye"></i>${hotnews[0].commentCount}
                              </span>
                              </li>
                          </ul>
                      </div>
                  </div>
              </div>
          </div>`);
          HotNewsNum++;
          for(var i=1;i<5;i++){
              addSmallBlock("row1",hotnews[i]);
              HotNewsNum++;
              if(HotNewsNum==hotnews.length){
                break;
              }
          }
          var rowNum=1;

          while (HotNewsNum<hotnews.length) {
            $('#Hotnews').append(`<div class='row' id='row${++rowNum}'></div>`);
            for(var i=0;i<4;i++){
                addSmallBlock("row"+rowNum,hotnews[HotNewsNum]);
                HotNewsNum++;
                if(HotNewsNum==hotnews.length){
                  break;
                }
            }
          }
        });
    </script>
