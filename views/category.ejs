		<!-- Custom JavaScript -->
    <script src="js/main.js"></script>
    <script>
        $(document).ready(function() {
          user=dataset.User;
          typenews=dataset.Typenews;
          //if have userinfo change view
          if(!user.null){
            $(".sign").hide();
            $(".logout").show();
            $(".userName").text("hello,"+user.name);
          }
          /**
          TypeNews
          */
          var newsNum=0;
          function getType(typenum) {
            return dataset.typelist[typenum-1];
          }
          function addSmallBlock(row,news) {
            $('#'+row).append(`
              <div class="col-sm-3">
                  <div class="thumbnail thumbnail_small">
                      <a href="/news?name=${news.name}" class="thumbnail__link">
                          <div style="width:270px;height:151px;">
                          <img src="updata/images/${news.name}.jpeg" height="180" width="270" alt="News">
                          </div>
                      </a>
                      <div class="caption thumbnail__caption">
                          <div class="news caption__news">
                              <p class="news__category yellow-line">${getType(news.type)}</p>
                              <a href="/news?name=${news.name}" class="news__link">
                                  <p class="news__text">${news.name}</p>
                              </a>
                          </div>
                          <div class="posted">
                              <span class="posted__date">${news.time}</span>
                              <ul class="posted__icon">
                                  <li>
                                      <span>
                                      <i class="icon-eye"></i>${news.commentCount}
                                  </span>
                                  </li>
                              </ul>
                          </div>
                      </div>
                  </div>
              </div>`);
          }
          //add content
          $('#Typenews').append("<div class='row' id='row1'></div>");
          $('#row1').append(`
            <div class="col-sm-6">
              <div class="thumbnail thumbnail_big">
                  <div >
                  <img src="updata/images/${typenews[0].name}.jpeg" height="350" width="563" alt="News">
                  <div class="caption thumbnail__caption" style="height:256px;">
                      <div class="news caption__news" style="height:186px">
                          <p class="news__category yellow-line">${getType(typenews[0].type)}</p>
                          <a href="/news?name=${typenews[0].name}" class="news__head">${typenews[0].name}</a>
                          <p class="news__desc">${typenews[0].name}${typenews[0].name}</p>
                      </div>
                      <div class="posted">
                          <span class="posted__date">${typenews[0].time}</span>
                          <ul class="posted__icon">
                              <li>
                                  <span>
                                  <i class="icon-eye"></i>${typenews[0].commentCount}
                              </span>
                              </li>
                          </ul>
                      </div>
                  </div>
              </div>
          </div>`);
          newsNum++;
          for(var i=1;i<5;i++){
              addSmallBlock("row1",typenews[i]);
              newsNum++;
              if(newsNum==typenews.length){
                break;
              }
          }
          var rowNum=1;

          while (newsNum<typenews.length) {
            $('#Typenews').append(`<div class='row' id='row${++rowNum}'></div>`);
            for(var i=0;i<4;i++){
                addSmallBlock("row"+rowNum,typenews[newsNum+i]);
                newsNum++;
                if(newsNum==typenews.length){
                  break;
                }
            }
          }
        });
    </script>
